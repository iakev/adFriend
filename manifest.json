{
  "manifest_version": 3,
  "name": "adFriend",
  "version": "1.0.0",
  "action": { "default_popup": "index.html" },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.jsx"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}
