{
  "manifest_version": 3,
  "name": "AdFriend Extension",
  "version": "1.0",
  "permissions": ["storage", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["https://api.api-ninjas.com/*"],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  }
}
